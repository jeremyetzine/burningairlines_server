<p id="notice"><%= notice %></p>

<h2>Flights</h2>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Flight</th>
      <th>From>To</th>
      <th>Plane</th>
      <th>Available Seats</th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.date.strftime("%e/%m/%Y") %></td>
        <td><%= link_to flight.flight, flight %></td>
        <td><%= flight.from %>><%= flight.to %></td>
        <td><%= link_to flight.airplane.name, flight.airplane %></td>
        <td><%= (flight.airplane.rows * flight.airplane.cols) - flight.reservations.length %></td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

