<p id="notice"><%= notice %></p>

<h2>Airplanes</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Total Seats</th>
    </tr>
  </thead>

  <tbody>
    <% @airplanes.each do |airplane| %>
      <tr>
        <td><%= link_to airplane.name, airplane %></td>
        <td><%= airplane.rows * airplane.cols %></td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= link_to 'Edit', edit_airplane_path(airplane) %></td>
        <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

